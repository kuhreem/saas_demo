<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
    <h1>Pro Account</h1>
    <p>Sign up for the Pro account for just $10/month and get access to our community of developers, investors and entrepreneurs PLUS contact information!</p>
    <% else %>
    <h1>Basic Account</h1>
    <p>Sign up for free and get Basic Membership access to our community of developers, investors and entrepreneurs.</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2 class="text-center">Sign up</h2>
      
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
      <% else %>      
        <%= render "basic_form" %>
      <% end %>      

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>